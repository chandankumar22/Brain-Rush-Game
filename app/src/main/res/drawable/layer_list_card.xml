<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primaryLightColor">
    <item>
        <layer-list>
            <!-- Gray shadow. -->
            <item
                android:left="0dp"
                android:right="0dp"
                android:top="0dp">
                <shape>
                    <solid android:color="@color/greyShadowColor" />
                    <corners
                        android:radius="@dimen/_20sdp"/>
                </shape>
            </item>
            <!-- White foreground. -->
            <item
                android:bottom="@dimen/_5sdp"
                android:right="0dp">
                <shape>
                    <solid android:color="@color/primaryLightColor" />
                    <corners android:radius="@dimen/_12sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>